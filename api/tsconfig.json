{
    "compilerOptions": {
        "outDir": "tsDist",
        "strictNullChecks": true,
        "allowJs": true,
        "checkJs": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es7"
        ],
        "types": [
            "node",
            "express",
            "jsonfile",
            "koa",
            "koa-router"
        ],
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "tsDist",
        "dist",
    ]
}